<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="14dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="25dp"
    android:gravity="center">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_close"
        android:background="#FC0000"
        android:layout_marginTop="7dp"
        android:elevation="5dp"
        android:id="@+id/closeDialog"
        android:layout_alignParentRight="true"
        android:layout_marginRight="7dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:layout_height="wrap_content">

            <View
                android:layout_marginTop="10dp"
                android:layout_width="0dp"
                android:layout_height="0dp"/>

            <com.electric.ccapy.Utils.PoppinsTextviewLight
                android:layout_width="match_parent"
                android:text="Seleccione una opción"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:layout_height="wrap_content"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_device"
                android:foreground="?selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/gradient">

                    <com.electric.ccapy.Utils.PoppinsTextviewLight
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:text="Mi dispositivo"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="80dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/device"
                        android:layout_height="100dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/cv_enable"
                android:foreground="?selectableItemBackground"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/gradient">

                    <com.electric.ccapy.Utils.PoppinsTextviewLight
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:text="Métricas"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="80dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/report1"
                        android:layout_height="100dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/cv_disable"
                android:visibility="gone"
                android:foreground="?selectableItemBackground"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/gradient">

                    <com.electric.ccapy.Utils.PoppinsTextviewLight
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:text="Desactivar\nMonitoreo"
                        android:layout_gravity="center"
                        android:textSize="22dp"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/icon_cow"
                        android:layout_height="150dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_incidents"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:foreground="?selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/gradient">

                    <com.electric.ccapy.Utils.PoppinsTextviewLight
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:text="Mis Registros"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="80dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/registers"
                        android:layout_height="100dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_logout"
                android:foreground="?selectableItemBackground"
                android:layout_width="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/gradient">

                    <com.electric.ccapy.Utils.PoppinsTextviewLight
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:text="Cerrar Sesión"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="80dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/exit"
                        android:layout_height="100dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            </LinearLayout>
            </ScrollView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>